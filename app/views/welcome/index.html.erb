<p>Los 5 productos más nuevos:</p>

<table>
  <thead>
    <tr>
      <th>Sku</th>
      <th>Descripcion</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.reverse_order.first(5).each do |product| %>
      <tr>
        <td><%= product.sku %></td>
        <td><%= product.descripcion %></td>
        <td><%= product.precio %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Listado de Artículos", products_path %></p>
